<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.greg3d.visittimedispacher" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/machine"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.visittimefixeractivity.VisitTimeFixerActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.someactivity.SomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.STATEMESSAGE" />
                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.filelistactivity.FileListActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.STATEMESSAGE" />
                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.editrecordactivity.EditRecordActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.STATEMESSAGE" />
                <category android:name="android.intent.category.GADGET" />
            </intent-filter>
        </activity>
    </application>

</manifest>
